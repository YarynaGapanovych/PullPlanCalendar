{
  "name": "pull-plan-calendar",
  "version": "0.1.0",
  "description": "React calendar with week/day/month views and task scheduling.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<you>/pull-plan-calendar.git"
  },
  "bugs": {
    "url": "https://github.com/<you>/pull-plan-calendar/issues"
  },
  "homepage": "https://github.com/<you>/pull-plan-calendar#readme",
  "keywords": ["react", "calendar", "scheduler", "tasks"],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./dist/calendar.css": "./dist/calendar.css"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": ["dist"],
  "sideEffects": false,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:lib": "tsup src/index.ts --tsconfig tsconfig.lib.json --format esm,cjs --dts --external react --external react-dom && cp src/styles/calendar.css dist/calendar.css",
    "start": "next start",
    "lint": "eslint"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "@dnd-kit/core": "^6.3.1",
    "dayjs": "^1.11.19"
  },
  "devDependencies": {
    "@dnd-kit/core": "^6.3.1",
    "dayjs": "^1.11.19",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "16.1.6",
    "next": "16.1.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tailwindcss": "^4",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3"
  }
}